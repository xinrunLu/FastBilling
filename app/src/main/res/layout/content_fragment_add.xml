<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luxinrun.fastbilling.FragmentAdd">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/btn_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_personal_selector"
                />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_exp_title"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/tv_exp_bg_selected"
                    android:textSize="14sp"
                    android:paddingBottom="8dip"
                    android:paddingTop="8dip"
                    android:paddingLeft="16dip"
                    android:paddingRight="16dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_exp"

                    />
                <TextView
                    android:id="@+id/tv_income_title"
                    android:background="@drawable/tv_income_bg_nor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="@string/tv_income"
                    android:textSize="14sp"
                    android:paddingBottom="8dip"
                    android:paddingTop="8dip"
                    android:paddingLeft="16dip"
                    android:paddingRight="16dip"

                    />
            </LinearLayout>

        </RelativeLayout>


    <include layout="@layout/keyboard_num" />



</LinearLayout>
